@model Knigosha.Core.Models.Text

@{
    ViewData["Title"] = "Удалить текст";
}
<partial name="_DashboardPartial" />
<div>
    <div class="header">
        <h4>Вы уверены, что хотите удалить этот текст?</h4>
        <a asp-action="Index" class="btn btn btn-light ">Назад к текстам</a>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Namespace)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Namespace)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Key)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Key)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="break-word col-sm-8">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.DateAdded)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.DateAdded)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.DateEdited)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.DateEdited)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
    </form>
</div>
