@model Knigosha.Core.Models.Book

@{
    ViewData["Title"] = "Удалить книгу";
}
<partial name="_DashboardPartial" />
<div>
    <div class="header">
        <h4>Вы уверены, что хотите удалить эту книгу?</h4>
        <a asp-action="Index" class="btn btn btn-light ">Назад к книгам</a>
    </div>
    <div>
        <img src="~/uploads/@Model.CoverPhoto" id="deleteCoverPhoto" alt="cover photo">
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                Название:
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-4">
                Автор:
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.BookAuthor)
            </dd>
            <dt class="col-sm-4">
                Издание:
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Publisher)
            </dd>
            <dt class="col-sm-4">
                Год издания:
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.YearPublished)
            </dd>
            <dt class="col-sm-4">
                Автор превода:
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Translator)
            </dd>
            <dt class="col-sm-4">
                Категория
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.BookCategory)
            </dd>
            <dt class="col-sm-4">
                ISBN
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Isbn1)
            </dd>
            <dt class="col-sm-4">
                ISBN (2)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Isbn2)
            </dd>
            <dt class="col-sm-4">
                Страниц:
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.NumberOfPages)
            </dd>
            <dt class="col-sm-4">
                Рейтинг:
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CalculatedRating)
            </dd>
            <dt class="col-sm-4">
                Класс:
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Grade)
            </dd>
            <dt class="col-sm-4">
                Вопросов о содержании
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.NumberOfContentQuestions)
            </dd>
            <dt class="col-sm-4">
                Вопросоа на понимание:
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.NumberOfComprehensionQuestions)
            </dd>
            <dt class="col-sm-4">
                Краткая форма:
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.IsShortForm)
            </dd>
            <dt class="col-sm-4">
                Тэги
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Tags)
            </dd>
            <dt class="col-sm-4">
                Добавлена:
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.DateAdded)
            </dd>
            <dt class="col-sm-4">
                Описание:
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-4">
                Автор вопросов
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.QuestionsAuthor)
            </dd>
            <dt class="col-sm-4">
                Добавил/а:
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.AddedByAdmin)
            </dd>
            <dt class="col-sm-4">
                Включена в программу в классе:
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.PartOfSchoolProgramAtGrade)
            </dd>
            <dt class="col-sm-4">
                Заполненных анкет:
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.TimesCompleted)
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Удалить" class="btn btn-danger" />
        </form>
    </div>
</div>