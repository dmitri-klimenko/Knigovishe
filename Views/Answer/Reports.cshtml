@model List<Knigosha.Core.Models.Report>
@{
    ViewData["Title"] = "Рапорты";
}
<div class="container" style="min-height: calc(100vh - 360px); margin-bottom: 30px; margin-top: 15px;">
    <partial name="_DashboardPartial"/>

    <table class="table table-bordered adminTable"  style="margin-top: 30px;">
        <tr>
            <th style="width: 15%">Дата</th>
            <th style="width: 20%">Книга</th>
            <th style="width: 8%">Вопрос</th>
            <th>Причина</th>
        </tr>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td align="center">@Model[i].DateTime</td>
                <td align="center">#@Model[i].Book.Id - @Model[i].Book.Title - @Html.DisplayTextFor(m => m[i].Book.AgeGroup)</td>
                <td align="center">#@Model[i].Question</td>
                <td align="center">@Model[i].Text</td>
            </tr>
        }

    </table>
</div>
