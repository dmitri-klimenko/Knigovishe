@model Knigosha.Core.ViewModels.UserViewModels.EditUserViewModel

@{
    ViewData["Title"] = "Редактировать пользователя";
}
<div class="container">
    <partial name="_DashboardPartial" />
    <div>
        <div class="header">
            <h4>Редактировать пользователя</h4>
            <a asp-action="Index" class="btn btn btn-light ">Назад к пользователям</a>
        </div>
        <hr />
        <form asp-action="Edit">
            <div class="adminForm row">
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="NumberOfCreatedBooks"></label>
                        <input asp-for="NumberOfCreatedBooks" class="form-control" />
                        <span asp-validation-for="NumberOfCreatedBooks" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PointsForCreatedBooks"></label>
                        <input asp-for="PointsForCreatedBooks" class="form-control" />
                        <span asp-validation-for="PointsForCreatedBooks" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Сохранить изменения" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>