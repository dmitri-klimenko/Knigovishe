@model IEnumerable<Knigosha.Core.ViewModels.UserViewModels.IndexUserViewModel>
@{
    ViewData["Title"] = "Ползователи";
}
<div class="container" style="min-height: calc(100vh - 360px); margin-bottom: 30px">
    <partial name="_DashboardPartial"/>
    <table id="userTable" class="table table-bordered adminTable">
        <thead>
        <tr>
            <th class="emailColumn">
                Email
            </th>
            <th class="userNameColumn">
                Username
            </th>
            <th class="userAddedDateColumn">
                Добавлен
            </th>
            <th class="loginColumn">
                Входил
            </th>
            <th class="loginTimes">
                Раз
            </th>
            <th class="userTypeColumn">
                Тип
            </th>

            <th class="deleteEditColumn"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Email)</a>
                </td>
                <td> @Html.DisplayFor(modelItem => item.UserName)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateAdded)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastLogin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoginTimes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserType)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@item.Id"><i id="deleteIcon" class="fa fa-trash-o"></i></a>
                </td>
            </tr>
        }
        </tbody>
    </table>


</div>