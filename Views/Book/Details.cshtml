@model Knigosha.Core.ViewModels.BookViewModels.DetailsViewModel

@{
    ViewBag.Title = "Книга";
}
<div class="visible-desktop">
    <div class="bookMain bg class4">
        <div class="container">
            <div style="padding:20px;">
                <div style="font-size:30px;font-weight:bold;padding-bottom:10px;">@Model.Book.Title</div>
                <div style="font-size:25px;padding-bottom:40px;">@Model.Book.BookAuthor</div>
                <a href="/user/quiz?id=522" class="button">РЕШИТЬ ВИКТОРИНУ</a>
            </div>
        </div>
    </div>
</div>
<div class="visible-mobile" style="height:50px;"></div>
<div id="content" style="padding-top:0px;">
    <div class="container">
        <table class="tc sc">
            <tr>
                <td valign="top" style="width:300px;">
                    <div class="book_div bg class4" style="padding:20px;padding-top:0px;position:relative;">
                        <div class="visible-mobile" style="height:20px;"></div>
                        <div class="bookLabel bg class4">@Html.DisplayFor(m => m.Book.AgeGroup)</div>
                        <img src="/uploads/@Model.Book.CoverPhoto" style="width:100%;">
                    </div>
                    <div style="height:20px"></div>
                    <div class="border class4" style="padding:20px;">
                        <div style="font-weight:bold;font-size:18px;padding-bottom:5px;">@Model.Book.Title</div>
                        <div style="padding-bottom:10px;">@Model.Book.BookAuthor</div>
                        <div style="padding-bottom:10px;">Категория: <b>@Html.DisplayFor(m => m.Book.BookCategory)</b></div>
                        <div style="padding-bottom:10px;">Год издания: <b>@Model.Book.YearPublished</b></div>
                        <div style="padding-bottom:10px;">Издателство: <b>@Model.Book.Publisher</b></div>
                        @if (Model.Book.Translator != null)
                        {<div style="padding-bottom:10px;">Переводчик: <b>@Model.Book.Translator</b></div>}
                        <div style="padding-bottom:10px;">Сложность викторины: <b>@Html.DisplayFor(m => m.Book.AgeGroup)</b></div>
                        <div style="padding-bottom:10px;">Автор викторины: <b>@Model.Book.QuestionsAuthor</b></div>
                        <br><br>
                        <div class="rating">
                            <b>@Model.Book.AverageRating</b>/5  &nbsp;
                            <i class="@(Model.Book.AverageRating == 0? "fa fa-star-o" : (Model.Book.AverageRating < 0.5? "fa fa-star-half-o" : "fa fa-star"))"></i>
                            <i class="@(Model.Book.AverageRating == 0? "fa fa-star-o" : (Model.Book.AverageRating < 1.5? "fa fa-star-half-o" : "fa fa-star"))"></i>
                            <i class="@(Model.Book.AverageRating == 0? "fa fa-star-o" : (Model.Book.AverageRating < 2.5? "fa fa-star-half-o" : "fa fa-star"))"></i>
                            <i class="@(Model.Book.AverageRating == 0? "fa fa-star-o" : (Model.Book.AverageRating < 3.5? "fa fa-star-half-o" : "fa fa-star"))"></i>
                            <i class="@(Model.Book.AverageRating == 0? "fa fa-star-o" : (Model.Book.AverageRating < 4.5? "fa fa-star-half-o" : "fa fa-star"))"></i>
                        </div>
                        <div class="yellow">Викторина решена <b>@Model.Book.Answers.Count</b> раз</div>
                    </div>
                </td>
                <td valign="top" style="padding-left:50px;padding-top:30px;">
                    <h2>Аннотация</h2>
                    @Model.Book.Description
                    <div style="height:40px;"></div>
                    <a href="/user/quiz?id=522" class="button">РЕШИТЬ ВИКТОРИНУ</a>
                    <div style="height:40px;"></div>
                    <div style="height:80px;"></div>
                    <div id="books">
                        <h1 class="section_title">Рекомендовано для Вас</h1>
                        <table style="width:100%;" class="tc sc">
                            <tr>
                                <td style="vertical-align:top;width:23%;">
                                    <div onclick="window.location='/Book/Details?id=@Model.Recommended[0].Id'" class="book_div">
                                        <img src="/uploads/@Model.Recommended[0].CoverPhoto">
                                        <div style="height:15px;"></div>
                                        <h3>@Model.Recommended[0].Title</h3>
                                        <div class="bookAuthor">@Model.Recommended[0].BookAuthor</div>
                                        <a href="/Book/Details?id=@Model.Recommended[0].Id">СМОТРЕТЬ </a>
                                    </div>
                                </td>
                                <td style="width:2.7%"></td>
                                <td style="vertical-align:top;width:23%;">
                                    <div onclick="window.location='/Book/Details?id=@Model.Recommended[1].Id'" class="book_div">
                                        <img src="/uploads/@Model.Recommended[1].CoverPhoto">
                                        <div style="height:15px;"></div>
                                        <h3>@Model.Recommended[1].Title</h3>
                                        <div class="bookAuthor">/@Model.Recommended[1].BookAuthor</div>
                                        <a href="/Book/Details?id=@Model.Recommended[0].Id">СМОТРЕТЬ </a>
                                    </div>
                                </td>
                                <td style="width:2.7%"></td>
                                <td style="vertical-align:top;width:23%;">
                                    <div onclick="window.location='/Book/Details?id=@Model.Recommended[2].Id'" class="book_div">
                                        <img src="/uploads/@Model.Recommended[2].CoverPhoto">
                                        <div style="height:15px;"></div>
                                        <h3>@Model.Recommended[2].Title</h3>
                                        <div class="bookAuthor">@Model.Recommended[2].BookAuthor</div>
                                        <a href="/Book/Details?id=@Model.Recommended[0].Id">СМОТРЕТЬ </a>
                                    </div>
                                </td>
                                <td style="width:2.7%"></td>
                                <td style="vertical-align:top;width:23%;">
                                    <div onclick="window.location='/Book/Details?id=@Model.Recommended[3].Id'" class="book_div">
                                        <img src="/uploads/@Model.Recommended[3].CoverPhoto">
                                        <div style="height:15px;"></div>
                                        <h3>@Model.Recommended[3].Title</h3>
                                        <div class="bookAuthor">@Model.Recommended[3].BookAuthor</div>
                                        <a href="/Book/Details?id=@Model.Recommended[0].Id">СМОТРЕТЬ </a>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div style="height:80px;"></div>
                </td>
            </tr>
        </table>
    </div>
</div>





